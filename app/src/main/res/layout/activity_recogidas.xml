<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Recogidas">

    <Button
        android:id="@+id/btn_inicio"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="INICIAR PARADA"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="397dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="1dp"
        android:text="ESTADO"
        android:textAlignment="viewStart"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.692"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/cbox_estado"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentStart="true"

        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="0dp"
        android:spinnerMode="dialog"
        android:text="S" />

    <Spinner
        android:id="@+id/cbox_aviario"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentStart="true"

        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="122dp"
        android:layout_marginEnd="0dp"
        android:spinnerMode="dialog"
        android:text="S" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="423dp"
        android:text="VELOCIDAD RECOGIDA"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txt_velocidad"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_inicio"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="435dp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/txt_velocidadMaq"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="438dp"
        android:layout_marginEnd="6dp"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="424dp"
        android:layout_marginEnd="10dp"
        android:text="VELOCIDAD MAQUINA"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txt_comentario"
        android:layout_width="401dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="489dp"
        android:layout_marginEnd="-4dp"
        android:ems="10"
        android:hint="COMENTARIO"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_registrar"
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="554dp"
        android:layout_marginEnd="7dp"
        android:text="REGISTRAR"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="394dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="251dp"
        android:layout_marginEnd="6dp"
        android:text="AVIARIO"
        android:textAlignment="viewStart"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="397dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="337dp"
        android:layout_marginEnd="9dp"
        android:text="TIPO DE RECOGIDA"
        android:textAlignment="viewStart"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/cbox_tipo_recogida"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentStart="true"

        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="206dp"
        android:layout_marginEnd="-1dp"
        android:spinnerMode="dialog"
        android:text="S" />

    <Button
        android:id="@+id/btn_fin"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginEnd="15dp"
        android:text="FINALIZAR PARADA"  />

    <TextView
        android:id="@+id/lbl_aviarios_pendientes_cierre"
        android:layout_width="341dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="109dp"
        android:layout_marginEnd="49dp"
        android:text="TextView"
        android:textColor="#FB0000"
        android:textSize="18sp"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:id="@+id/lbl_aviarios_abiertos"
        android:layout_width="338dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="52dp"
        android:text="TextView"
        android:textColor="#039809"
        android:textSize="18sp"
        android:textStyle="normal|bold|italic" />

</RelativeLayout>